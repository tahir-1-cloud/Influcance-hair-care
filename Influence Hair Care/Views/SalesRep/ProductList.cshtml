@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
<script src="~/js/jquery1-3.4.1.min.js"></script>

<script src="~/js/jquery.validate.min.js"></script>
<script src="~/js/jquery.validate.unobtrusive.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
<script src="~/js/toastr.js"></script>


@if (TempData["response"] != null)
{
    <script>
        $(document).ready(function() {
            var success = '@((TempData["response"] != null).ToString())';
            if (success == 'false' || success == false) {
            } else {
                toastr.success('@TempData["response"].ToString()')
            }
        });

    </script>
}


<head>
    <style>
        .swal-modal {
            background: lightblue;
        }

        .swal-button--yes {
            background: darkslateblue;
        }

        .swal-button--no {
            background: darkslateblue;
        }
    </style>
</head>
<br />
<br />
<h3>Product List</h3>
<br />
<br />
<div class="container">
    <table id="User" class="display">

        <thead>
            <tr>
                <th>Product Code</th>
                <th>Product Name</th>
                <th>Category</th>
                <th>Stock Quantity</th>
                <th>Low Stock threshold</th>
                <th>Regular Price ($)</th>
                <th>Sale Price ($)</th>
                <th>Stock Status</th>
                <th>Product</th>
                <th>Action</th>
            </tr>

        </thead>

        <tr>
            <td>el123</td>
            <td>Hair serum A</td>
            <td>Hair serum</td>
            <td>50</td>
            <td>20</td>
            <td>$8.00</td>
            <td>$7.0</td>

            <td>Available</td>
            <td> <img width="50" src="/assets/img/Rene Furterer Forticea Fortifying Ritual Energizing Shampoo.jpg" /> </td>
            <td style="display:flex; justify-content:space-between; padding-top:25px;">
                <a class="btn btn-link btn-warning edit btn-sm btnUpdates d-none" style="color:maroon; margin-right:5px;" href='@Url.Action("UpdateEmploye", "Employee", new { id = "" })' : null"><i class="fa fa-edit"></i></a>
                <a class="btn btn-link btn-warning edit btnupdate" style="color:maroon"><i class="fa fa-edit"></i></a>


                <a class="btn btn-link btn-danger remove btn-sm btnremove d-none" style="color:maroon" href='@Url.Action("DeleteEmploye", "Employee", new { id = ""})' : null"><i class="fa fa-times"></i></a>
                <a class="btn btn-link btn-danger remove btndelete" style="color:maroon;margin-left: 1rem;"><i class="fa fa-times"></i></a>

                <a class="btn btn-info" style="margin-left: 1rem;" href='@Url.Action("ProductDetails", "SalesRep", new { id = ""})' : null"><i class="fa fa-eye" aria-hidden="true"></i></a>

            </td>
        </tr>



    </table>

</div>


<link href="//cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="//cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


@section scripts{
    <script>
        $(document).ready(function() {
            $('#User').DataTable({

                "Processing": true,
                "ServerSide": false,
                "Filter": true
            })
        });
    </script>

}
    <script>
        $(".btndelete").click(function(e) {
            e.preventDefault();
            swal("Are you sure to delete?", {
                buttons: {
                    yes: {
                        text: "Yes",
                        value: "yes"
                    },
                    no: {
                        text: "No",
                        value: "no"
                    }
                }
            }).then((value) => {
                if (value == "yes") {
                    debugger;
                    $(this).parent().find(".btnremove").get(0).click();
                }
                return false;
            });
        });
    </script>

    <script>
        $(".btnupdate").click(function(e) {
            e.preventDefault();
            swal("Are you sure you want to update?", {
                buttons: {
                    yes: {
                        text: "Yes",
                        value: "yes"
                    },
                    no: {
                        text: "No",
                        value: "no"
                    }
                }
            }).then((value) => {
                if (value == "yes") {
                    debugger;
                    $(this).parent().find(".btnUpdates").get(0).click();
                }
                return false;
            });
        });
    </script>